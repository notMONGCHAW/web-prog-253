<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= isEdit ? 'Edit Event' : 'Create Event' %> - Admin</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <%- include('../partials/header', { user }) %>
  
  <main class="container">
    <section class="admin-event-form">
      <h2><%= isEdit ? 'Edit Event' : 'Create New Event' %></h2>
      
      <form class="event-form" method="post">
        <div class="form-row">
          <div class="form-group">
            <label for="title">Event Title *</label>
            <input 
              type="text" 
              id="title" 
              name="title" 
              value="<%= event ? event.title : '' %>" 
              required 
            />
          </div>
        </div>
        
        <div class="form-row form-row--2">
          <div class="form-group">
            <label for="date">Date *</label>
            <input 
              type="date" 
              id="date" 
              name="date" 
              value="<%= event ? event.date : '' %>" 
              required 
            />
          </div>
          
          <div class="form-group">
            <label for="time">Time *</label>
            <input 
              type="time" 
              id="time" 
              name="time" 
              value="<%= event ? event.time : '' %>" 
              required 
            />
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="duration">Duration</label>
            <input 
              type="text" 
              id="duration" 
              name="duration" 
              value="<%= event ? event.duration : '' %>" 
              placeholder="e.g., 3 hours" 
            />
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="location">Location *</label>
            <input 
              type="text" 
              id="location" 
              name="location" 
              value="<%= event ? event.location : '' %>" 
              required 
            />
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="address">Full Address</label>
            <input 
              type="text" 
              id="address" 
              name="address" 
              value="<%= event ? event.address : '' %>" 
            />
          </div>
        </div>
        
        <div class="form-row form-row--2">
          <div class="form-group">
            <label for="seats">Total Seats *</label>
            <input 
              type="number" 
              id="seats" 
              name="seats" 
              value="<%= event ? event.seats : '' %>" 
              min="1" 
              required 
            />
          </div>
          
          <div class="form-group">
            <label for="price">Price</label>
            <input 
              type="text" 
              id="price" 
              name="price" 
              value="<%= event ? event.price : 'Free' %>" 
            />
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="organizer">Organizer</label>
            <input 
              type="text" 
              id="organizer" 
              name="organizer" 
              value="<%= event ? event.organizer : '' %>" 
            />
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="description">Short Description *</label>
            <textarea 
              id="description" 
              name="description" 
              rows="3" 
              required
            ><%= event ? event.description : '' %></textarea>
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="longDescription">Detailed Description</label>
            <textarea 
              id="longDescription" 
              name="longDescription" 
              rows="5"
            ><%= event ? event.longDescription : '' %></textarea>
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="image">Image URL</label>
            <input 
              type="url" 
              id="image" 
              name="image" 
              value="<%= event ? event.image : '' %>" 
              placeholder="https://example.com/image.jpg" 
            />
          </div>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn--primary btn--large">
            <%= isEdit ? 'Save Changes' : 'Create Event' %>
          </button>
          <a href="/admin/events" class="btn btn--secondary btn--large">Cancel</a>
        </div>
      </form>
    </section>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
